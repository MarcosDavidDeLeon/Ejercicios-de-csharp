using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        // Crear una lista de estudiantes
        List<string> listaEstudiantes = new List<string>();

        // Menú para seleccionar las opciones
        int opcion;
        do
        {
            Console.WriteLine("\n=== Gestión de Estudiantes ===");
            Console.WriteLine("1. Agregar un estudiante");
            Console.WriteLine("2. Eliminar un estudiante");
            Console.WriteLine("3. Mostrar la lista de estudiantes");
            Console.WriteLine("4. Salir");
            Console.Write("Seleccione una opción: ");
            opcion = Convert.ToInt32(Console.ReadLine());

            switch (opcion)
            {
                case 1:
                    // Agregar un estudiante
                    Console.Write("Ingrese el nombre del estudiante: ");
                    string estudiante = Console.ReadLine();
                    listaEstudiantes.Add(estudiante);
                    Console.WriteLine($"Estudiante '{estudiante}' agregado correctamente.");
                    break;

                case 2:
                    // Eliminar un estudiante
                    Console.Write("Ingrese el nombre del estudiante a eliminar: ");
                    string estudianteEliminar = Console.ReadLine();
                    if (listaEstudiantes.Remove(estudianteEliminar))
                    {
                        Console.WriteLine($"Estudiante '{estudianteEliminar}' eliminado correctamente.");
                    }
                    else
                    {
                        Console.WriteLine($"El estudiante '{estudianteEliminar}' no se encuentra en la lista.");
                    }
                    break;

                case 3:
                    // Mostrar la lista de estudiantes
                    Console.WriteLine("\nLista de estudiantes:");
                    if (listaEstudiantes.Count == 0)
                    {
                        Console.WriteLine("No hay estudiantes en la lista.");
                    }
                    else
                    {
                        foreach (string nombre in listaEstudiantes)
                        {
                            Console.WriteLine(nombre);
                        }
                    }
                    break;

                case 4:
                    // Salir del programa
                    Console.WriteLine("Saliendo del programa...");
                    break;

                default:
                    Console.WriteLine("Opción no válida. Intente nuevamente.");
                    break;
            }
        } while (opcion != 4); // El bucle continúa hasta que el usuario seleccione salir
    }
}
