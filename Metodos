using System;
using System.Collections.Generic;

class Programa
{
    // Lista para almacenar los nombres de los estudiantes
    static List<string> listaEstudiantes = new List<string>();

    static void Main(string[] args)
    {
        int opcion;

        // Bucle para el menú
        do
        {
            // Mostrar el menú
            Console.WriteLine("GESTIÓN DE ESTUDIANTES");
            Console.WriteLine("1. Agregar un estudiante");
            Console.WriteLine("2. Mostrar la lista de estudiantes");
            Console.WriteLine("3. Buscar un estudiante por nombre");
            Console.WriteLine("4. Salir");
            Console.Write("Seleccione una opción: ");
            opcion = Convert.ToInt32(Console.ReadLine());

            // Ejecutar la opción seleccionada
            switch (opcion)
            {
                case 1:
                    AgregarEstudiante();
                    break;
                case 2:
                    MostrarEstudiantes();
                    break;
                case 3:
                    BuscarEstudiante();
                    break;
                case 4:
                    Console.WriteLine("Saliendo del programa...");
                    break;
                default:
                    Console.WriteLine("Opción no válida. Intente nuevamente.");
                    break;
            }

            Console.WriteLine(); // Separador entre acciones
        } while (opcion != 4); // Repetir hasta que se elija la opción de salir
    }

    // Método para agregar un estudiante a la lista
    static void AgregarEstudiante()
    {
        Console.Write("Ingrese el nombre del estudiante: ");
        string nombre = Console.ReadLine();
        listaEstudiantes.Add(nombre);
        Console.WriteLine("Estudiante agregado correctamente.");
    }

    // Método para mostrar la lista de estudiantes
    static void MostrarEstudiantes()
    {
        if (listaEstudiantes.Count == 0)
        {
            Console.WriteLine("No hay estudiantes en la lista.");
        }
        else
        {
            Console.WriteLine("Lista de estudiantes:");
            foreach (string estudiante in listaEstudiantes)
            {
                Console.WriteLine(estudiante);
            }
        }
    }

    // Método para buscar un estudiante por nombre
    static void BuscarEstudiante()
    {
        Console.Write("Ingrese el nombre del estudiante a buscar: ");
        string nombre = Console.ReadLine();
        if (listaEstudiantes.Contains(nombre))
        {
            Console.WriteLine($"El estudiante '{nombre}' se encuentra en la lista.");
        }
        else
        {
            Console.WriteLine($"El estudiante '{nombre}' no está en la lista.");
        }
    }
}
