using System;

namespace TiposDeDatosYVariables
{
    class Program
    {
        static void Main(string[] args)
        {
           
            int edad = 25; 
            double altura = 1.75; 
            char inicial = 'A'; 
            string nombre = "Juan"; 
            bool esEstudiante = true; 

            
            Console.WriteLine("Información de la persona:");
            Console.WriteLine($"Nombre: {nombre}");
            Console.WriteLine($"Inicial: {inicial}");
            Console.WriteLine($"Edad: {edad} años");
            Console.WriteLine($"Altura: {altura} metros");
            Console.WriteLine($"¿Es estudiante?: {esEstudiante}");

           
            edad += 5; 
            altura -= 0.05; 

           
            Console.WriteLine("\nDespués de algunos cambios:");
            Console.WriteLine($"Nueva Edad: {edad} años");
            Console.WriteLine($"Nueva Altura: {altura} metros");
        }
    }
}

