class Programa
{
    static void Main(string[] args)
    {
        // Generar un número secreto aleatorio entre 1 y 50
        Random random = new Random();
        int numeroSecreto = random.Next(1, 51);

        int intento = 0;  // Variable para almacenar la suposición del usuario
        int intentos = 0; // Contador de intentos

        Console.WriteLine("Bienvenido al juego de adivinar el número.");
        Console.WriteLine("Intenta adivinar el número secreto entre 1 y 50.");

        // Bucle while que se repite hasta que el usuario acierte el número
        while (intento != numeroSecreto)
        {
            Console.Write("Ingresa tu número: ");
            intento = Convert.ToInt32(Console.ReadLine());
            intentos++;

            if (intento < numeroSecreto)
            {
                Console.WriteLine("El número es mayor. Intenta nuevamente.");
            }
            else if (intento > numeroSecreto)
            {
                Console.WriteLine("El número es menor. Intenta nuevamente.");
            }
            else
            {
                Console.WriteLine($"¡Felicidades! Has adivinado el número en {intentos} intentos.");
            }
        }

        Console.WriteLine("Gracias por jugar. Presiona cualquier tecla para salir...");
        Console.ReadKey();
    }
}
