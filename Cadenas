using System;

class Program
{
    static void Main()
    {
        // Pedir al usuario que ingrese una oración
        Console.WriteLine("Ingrese una oración: ");
        string oracion = Console.ReadLine();

        // Mostrar la cantidad de palabras en la oración
        string[] palabras = oracion.Split(' ');
        Console.WriteLine($"\nCantidad de palabras: {palabras.Length}");

        // Mostrar la cantidad de caracteres (excluyendo espacios)
        int caracteresSinEspacios = oracion.Replace(" ", "").Length;
        Console.WriteLine($"Cantidad de caracteres (sin contar espacios): {caracteresSinEspacios}");

        // Convertir la oración a mayúsculas y minúsculas
        Console.WriteLine($"Oración en mayúsculas: {oracion.ToUpper()}");
        Console.WriteLine($"Oración en minúsculas: {oracion.ToLower()}");

        // Invertir la oración
        char[] caracteres = oracion.ToCharArray();
        Array.Reverse(caracteres);
        string oracionInvertida = new string(caracteres);
        Console.WriteLine($"Oración invertida: {oracionInvertida}");

        // Buscar una palabra específica dentro de la oración
        Console.WriteLine("\nIngrese una palabra para buscar en la oración:");
        string palabraBuscar = Console.ReadLine();

        // Verificar si la palabra está en la oración
        if (oracion.Contains(palabraBuscar, StringComparison.OrdinalIgnoreCase))
        {
            Console.WriteLine($"La palabra '{palabraBuscar}' se encuentra en la oración.");
        }
        else
        {
            Console.WriteLine($"La palabra '{palabraBuscar}' no está en la oración.");
        }
    }
}
