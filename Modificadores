using System;

namespace EjemploModificadores
{
    // Clase base con diferentes modificadores de acceso
    class Persona
    {
        // Propiedad con modificador `public` (accesible desde cualquier parte)
        public string Nombre { get; set; }

        // Propiedad con modificador `protected` (accesible solo dentro de la clase y en las clases derivadas)
        protected int Edad { get; set; }

        // Propiedad con modificador `private` (accesible solo dentro de esta clase)
        private string NumeroIdentidad { get; set; }

        // Propiedad con modificador `internal` (accesible solo dentro del mismo ensamblado)
        internal string Direccion { get; set; }

        // Constructor para inicializar las propiedades
        public Persona(string nombre, int edad, string numeroIdentidad, string direccion)
        {
            Nombre = nombre;
            Edad = edad;
            NumeroIdentidad = numeroIdentidad;
            Direccion = direccion;
        }

        // Método `public` para mostrar información básica
        public void MostrarInformacion()
        {
            Console.WriteLine($"Nombre: {Nombre}");
            Console.WriteLine($"Edad: {Edad}"); // `Edad` es `protected`, pero accesible aquí
            // Console.WriteLine($"Número de Identidad: {NumeroIdentidad}"); // No se puede acceder porque es `private`
            Console.WriteLine($"Dirección: {Direccion}");
        }
    }

    // Clase derivada que hereda de `Persona`
    class Empleado : Persona
    {
        // Propiedad específica de `Empleado`
        public string Puesto { get; set; }

        // Constructor de la clase derivada que llama al constructor base
        public Empleado(string nombre, int edad, string numeroIdentidad, string direccion, string puesto)
            : base(nombre, edad, numeroIdentidad, direccion)
        {
            Puesto = puesto;
        }

        // Método `public` para mostrar información específica de Empleado
        public void MostrarInformacionEmpleado()
        {
            Console.WriteLine($"\nInformación del Empleado:");
            MostrarInformacion(); // Llama al método de la clase base
            Console.WriteLine($"Puesto: {Puesto}");
        }
    }

    // Clase de prueba
    class Program
    {
        static void Main(string[] args)
        {
            // Crear un objeto de la clase `Empleado`
            Empleado empleado = new Empleado("Marcos", 30, "ABC123", "Calle 123", "Gerente de Ventas");

            // Mostrar la información del empleado
            empleado.MostrarInformacionEmpleado();

            // Acceso a diferentes propiedades desde el exterior
            Console.WriteLine($"\nAccediendo a propiedades desde `Main`:");
            Console.WriteLine($"Nombre (public): {empleado.Nombre}"); // Acceso permitido
            // Console.WriteLine($"Edad (protected): {empleado.Edad}"); // Error: `protected` no es accesible aquí
            // Console.WriteLine($"Número de Identidad (private): {empleado.NumeroIdentidad}"); // Error: `private` no es accesible aquí
            Console.WriteLine($"Dirección (internal): {empleado.Direccion}"); // Acceso permitido porque estamos en el mismo ensamblado
        }
    }
}
